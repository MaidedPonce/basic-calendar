{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./src/",
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "context/*": ["context/*"],
      "containers/*": ["containers/*"],
      "styles/*": ["styles/*"],
      "config/*": ["config/*"],
      "services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
